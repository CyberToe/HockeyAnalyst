{
  "version": 2,
  "buildCommand": "cd backend && npx prisma generate && npm install && cd .. && npm run build:all",
  "installCommand": "cd backend && npm install && cd .. && npm install",
  "outputDirectory": "frontend/dist",
  "framework": null,
  "functions": {
    "api/index.js": {
      "includeFiles": "backend/dist/**",
      "memory": 1024,
      "maxDuration": 10,
      "excludeFiles": "**/*.test.ts"
    }
  },
  "serverFiles": [
    "backend/node_modules/@prisma/**",
    "backend/node_modules/.prisma/**",
    "backend/node_modules/@sendgrid/**"
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
