{
  "version": 2,
  "buildCommand": "npm run build:all && npx prisma generate",
  "installCommand": "npm install",
  "outputDirectory": "frontend/dist",
  "framework": null,
  "functions": {
    "backend/dist/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/dist/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
